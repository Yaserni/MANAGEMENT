<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/linear1">

    <TextView
        android:id="@+id/gr_name"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:padding="4dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/gr_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="type"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/gr_sporttype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="sporttype"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/gr_lighting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lighting"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/gr_gr_neighbor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neighbor"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/gr_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Street"
        android:textSize="18sp"/>

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gr_activity"
        android:text="Activity"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gr_id"
        android:text="id"
        android:textSize="18sp"/>

</LinearLayout>